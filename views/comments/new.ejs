<%- include('../partials/header.ejs'); %>

    <h1>
        Add comments to: <%= products.name %>
    </h1>

    <div class="container">
        <div class="row">
            <div class="form-centre">
                <!-- Post new products object. -->
                <form action="/products/<%= products._id %>/comments" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" placeholder="comment">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary form-centre">Post</button>
                    </div>
                </form>
            </div>
        </div>
        <a href="/products">Back</a>
    </div>

    <%- include('../partials/footer.ejs'); %>