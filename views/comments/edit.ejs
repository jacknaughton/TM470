<%- include('../partials/header.ejs'); %>

    <div class="container">
        <div class="row">
            <div class="form-centre">
                <h1>Edit comment</h1>
                <!-- Post new products object. -->
                <form action="/products/<%= products_id %>/comments/<%=comment.id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary form-centre">Post</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include('../partials/footer.ejs'); %>