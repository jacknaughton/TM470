<%- include('../partials/header.ejs'); %>

    <h1>Edit <%=product.name%> object</h1>

    <div class="container">
        <div class="row">
            <div class="form-centre">
                <!-- Post new products object. -->
                <form action="/products/<%=product._id%>/?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="product[name]" value="<%=product.name%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="product[image]" value="<%=product.image%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="product[description]"
                            value="<%=product.description%>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary form-centre">Post</button>
                    </div>
                </form>
            </div>
        </div>
        <a href="/products">Back</a>
    </div>


    <%- include('../partials/footer.ejs'); %>